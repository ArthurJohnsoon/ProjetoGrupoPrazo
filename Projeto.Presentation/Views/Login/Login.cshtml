@model Projeto.Presentation.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}

<div class="panel-heading">
    <h3 class="panel-title">Login de Acesso</h3>
</div>
<div class="panel-body">
    @using (Html.BeginForm())
    {
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @placeholder = "Login" })
            </div>
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Login)
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Senha,
            new { @class = "form-control", @placeholder = "Senha" })
            </div>
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Senha)
            </div>
            <input type="submit" value="Acessar Sistema"
                   class="btn btn-success form-control" />
        </fieldset>
    }
</div>


