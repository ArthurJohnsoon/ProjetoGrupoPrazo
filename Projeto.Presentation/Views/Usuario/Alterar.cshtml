
@model Projeto.Presentation.Models.UsuarioViewModel
@{
    ViewBag.Title = "Alterar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Alterar conta de Usuário</h4>
Preencha os campos abaixo para alterar sua conta de acesso.
<br />
<br />


@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.UsuarioId)
    <label>Nome do Usuário:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4", @placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <br />
    <label>E-mail:</label>
    @Html.TextBoxFor(model => model.Email,
        new { @class = "form-control col-md-4", @placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <br />
    <label>Login de Acesso:</label>
    @Html.TextBoxFor(model => model.Login,
        new { @class = "form-control col-md-4", @placeholder = "Digite aqui" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Login)
    </div>
    <br />

    <label>Permissão de Acesso:</label>
    @Html.DropDownListFor(m => m.Permissao, Model.PermissaoList, new { @class = "form-control col-md-4" })
    <div class="text-danger">
        @Html.ValidationMessageFor(model => model.Permissao)
    </div>
    <br />
    <br />
    <input type="submit" value="Alterar Usuário" class="btn btn-success" />

    <br />
    <br />
    @ViewBag.Mensagem

}